<?php

/**
 * @file
 * Install, update and uninstall functions for the nextjs_config module.
 */

/**
 * Implements hook_install().
 */
function nextjs_config_install() {
  // Set this module as the front page
  \Drupal::configFactory()
    ->getEditable('system.site')
    ->set('page.front', '/nextjs-config')
    ->save();
}

/**
 * Implements hook_uninstall().
 */
function nextjs_config_uninstall() {
  // Reset front page to default
  \Drupal::configFactory()
    ->getEditable('system.site')
    ->set('page.front', '/user/login')
    ->save();
}