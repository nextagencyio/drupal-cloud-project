# Ignore directories generated by Composer
/drush/contrib/
/vendor/
/web/core/
/web/modules/contrib/
/web/themes/contrib/
/web/profiles/contrib/
/web/libraries/

/web/sites/sites.php

# Ignore all sites directories except default
/web/sites/*/
!/web/sites/default/

# Ignore sensitive information
/web/sites/*/settings.php
/web/sites/*/settings.local.php

# Ignore services configuration
/web/sites/*/services.yml

# Ignore Drupal's file directory
/web/sites/*/files/

# Ignore SimpleTest multi-site environment
/web/sites/simpletest

# Ignore files generated by common IDEs
/.idea/
/.vscode/

# Ignore .env files as they are personal
/.env
/.editorconfig
/.gitattributes

# Ignore OAuth keys and certificates - NEVER commit these!
/keys/
/web/sites/*/private/
*.key
*.pem
*.crt
*.p12
*.pfx

# Ignore API key files - NEVER commit these!
DRUPAL_API_KEY.txt
/DRUPAL_API_KEY.txt

# Ignore private configuration files
/web/sites/*/config/sync/
private/
