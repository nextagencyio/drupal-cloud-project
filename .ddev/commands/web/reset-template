#!/bin/bash
#ddev-description: Reset/recreate a multisite using dcloud_api service (default: template)
#ddev-usage: ddev reset-template [space_name]

set -euo pipefail

SPACE_NAME="${1:-template}"
ROOT="/var/www/html/web"
URI="http://dcloud.ddev.site"

echo "==> Resetting multisite: ${SPACE_NAME} on ${URI}"
drush --root="$ROOT" --uri="$URI" scr /var/www/html/templates/dcloud/scripts/reset_template_drush.php "$SPACE_NAME"
